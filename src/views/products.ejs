<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Todos los productos' }) %>

<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Todos los productos</h2>
			</div>

			<% products.forEach(element=> { %>

			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/<%= element.id %>">
						<figure class="product-box_image">
							<!--						  	SI EN DB     			   image ?   PON	 image :  default-image.png SINO...-->
							<img src="/images/products/<%= element.image ? element.image : 'default-image.png'%>"
								alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2>
								$
								<%= toThousand(element.price - ((element.price * element.discount) /100)) %>
							</h2>
							<span>

								<% if (element.discount != 0) { %>
								<%= element.discount %>% OFF
								<% } %>

							</span>
							<p>
								<%= element.name %>
							</p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>

			<% }) %>

		</div>
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>

</html>