<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Resultados de tu búsqueda'}) %>

<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de la búsqueda: </h2>

				<!-- REPARTIR RESULTADO ITEMS AQUI, DE LA BUSQUEDA ITERADA SOBRE ARRAY products -->
				<% for( let i = 0; i < searchResults.length; i++ ) { %>
			</div>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/<%= searchResults[i].id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= searchResults[i].image %>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2>$
								<%= toThousand(searchResults[i].price - ((searchResults[i].price * searchResults[i].discount) /100)) %>
							</h2>
							<span><%= searchResults[i].discount %> % OFF</span>
							<p><%= searchResults[i].name %></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
			<% } %>

			<!-- SI NO HAY RESULTADOS EN LA BUSQUEDA IMPRIMIR ESTO -->
			<% if (searchResults == '') { %>
			<div class="col-12">
				<h2 class="products-title" style="color: tomato;">No hay productos que coincidan con esa búsqueda</h2>
			</div>
			<% } %>

		</div>
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>

</html>