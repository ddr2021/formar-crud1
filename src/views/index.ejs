<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Inicio' }) %>

<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->
	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu última visita</h2>
			</div>
			<!-- Show the "visited" products -->

			<% productsVisited.forEach(element=> { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<!-- <a href="/products/detail/¿?"> -->
					<a href="/products/<%= element.id %> ">
						<figure class="product-box_image">
							<img src="/images/products/<%= element.image  %> " alt="imagen de producto" />
						</figure>
						<article class="product-box_data">
							<h2>
								<%= toThousand(element.price - ((element.price * element.discount) /100)) %>
							</h2>
							<span>

								<% if (element.discount !== 0) { %>
								<%= element.discount %> % OFF
								<% } %>

							</span>
							<p>
								<%= element.name %>
							</p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
			<% }) %>
		</div>
	</div>
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<div id="in-sale" style="color: transparent;">
		<p> OFERTAS</p>
		<p> OFERTAS</p>
	</div>

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<!-- Show the "in-sale" products -->

			<% productsInsale.forEach(element=> { %>

			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/<%= element.id %> ">
						<figure class="product-box_image">
							<img src="/images/products/<%= element.image  %> " alt="imagen de producto" />
						</figure>
						<article class="product-box_data">
							<h2>
								<%= toThousand(element.price - ((element.price * element.discount) /100)) %>
							</h2>
							<span>
								<%= element.discount %> % OFF
							</span>
							<p>
								<%= element.name %>
							</p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>

			<% }) %>

		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>

</html>